{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext", "es2020"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "nodenext",
    "noEmit": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "types": [
      "./types.d.ts"
    ]
  },
  "include": ["*.ts"]
}
